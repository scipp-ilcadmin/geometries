        <vis name="SiVertexEndcapVis" r="0.5" g="0.7" b="0.4" />

        <vis name="SiTrackerForwardVis" r="0.8" g="0.1" b="0.1" />

        <vis name="SiTrackerBarrelVis" r="0.8" g="1.0" b="0.1" />
        <vis name="SiTrackerEndcapVis" r="0.8" g="1.0" b="0.1" />

